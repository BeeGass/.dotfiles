# === Appearance ===
background = 000000
foreground = ffffff
# Global transparency like WezTerm's window_background_opacity
background-opacity = 0.80
# Make apps that repaint the background (tmux, nvim) honor opacity
background-opacity-cells = true

# === Window ===
# macOS: transparent titlebar; Linux: use client-side decorations
macos-titlebar-style = transparent
window-decoration = client
# Padding (roughly equivalent to wezterm.window_padding)
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
# Hide tab bar (you're using tmux) - Linux/GTK only
window-show-tab-bar = never

# === Font ===
# Fallback order like wezterm.font_with_fallback
font-family = Google Sans Mono
font-family = JetBrains Mono
font-family = SF Mono
font-family = Symbols Nerd Font Mono
font-size = 10

# === Cursor ===
cursor-style = bar
cursor-style-blink = true

# === Behavior ===
# Right-click paste (wezterm mouse binding)
right-click-action = paste

# Scrollback: WezTerm set 10000 lines; Ghostty uses bytes.
# 16777216 bytes = 16 MiB ~= plenty for ~10k lines at typical widths.
scrollback-limit = 16777216

# === Performance / Rendering ===
# Vsync defaults to on for macOS (safer); leave as default.
# (No explicit max_fps in Ghostty; it's GPU-driven.)

# === Shell / Autostart tmux ===
# Use login shell so PATH is properly configured (OS-agnostic)
command = zsh -l -c "tmux -u new-session -A -s main"

# Optional: copy on select (default true on Linux/macOS); uncomment if you want to pin it.
# copy-on-select = true
