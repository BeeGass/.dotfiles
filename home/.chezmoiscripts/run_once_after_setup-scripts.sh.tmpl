#!/bin/bash
set -euo pipefail
mkdir -p "$HOME/.local/bin"
for s in "$HOME/.dotfiles/scripts"/*; do
  [[ -f "$s" ]] || continue
  chmod +x "$s" || true
  base="$(basename "$s")"
  ln -sfn "$s" "$HOME/.local/bin/$base"
  if [[ "$base" == *.sh ]]; then
    ln -sfn "$s" "$HOME/.local/bin/${base%.sh}"
  fi
done
