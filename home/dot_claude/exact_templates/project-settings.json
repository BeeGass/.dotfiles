{
  "_comment": "Copy this file to your project's .claude/settings.json to apply project-specific rules",
  "_usage": "cp ~/.claude/templates/project-settings.json /path/to/project/.claude/settings.json",
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(.env.development)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(~/.ssh/*)",
      "Read(~/.ssh/**)",
      "Read(**/*credentials*)",
      "Read(**/*secrets*)",
      "Read(**/*secret*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*_key)",
      "Read(**/*_rsa)",
      "Read(**/*_dsa)",
      "Read(**/*_ecdsa)",
      "Read(**/*_ed25519)",
      "Read(**/id_rsa*)",
      "Read(**/id_dsa*)",
      "Read(**/id_ecdsa*)",
      "Read(**/id_ed25519*)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/serviceAccount*.json)",
      "Read(**/service-account*.json)",
      "Read(**/*token*)",
      "Read(**/*password*)",
      "Read(**/*apikey*)",
      "Read(**/*api_key*)",
      "Read(**/*api-key*)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Write(.env)",
      "Write(.env.*)",
      "Write(**/.env)",
      "Write(**/.env.*)"
    ]
  }
}
